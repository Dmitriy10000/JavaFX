<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx.ProfileController">
   <center>
      <VBox alignment="CENTER" minHeight="0.0" minWidth="0.0" style="-fx-background-color: rgb(243, 238, 234);" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="UserProfileLabel" text="User profile" wrapText="true">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" minHeight="0.0" minWidth="0.0" spacing="20.0">
               <children>
                  <VBox minHeight="0.0" minWidth="0.0">
                     <children>
                        <Label fx:id="FirstNameLabel" text="First name" />
                        <TextField fx:id="FirstName" minHeight="0.0" minWidth="0.0" promptText="Enter your name">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </TextField>
                        <Label fx:id="DateOfBirthLabel" layoutX="10.0" layoutY="10.0" text="Date of Birth" />
                        <DatePicker fx:id="DateOfBirth" minHeight="0.0" minWidth="0.0" prefWidth="150.0" promptText="Select date of birth">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </DatePicker>
                        <VBox minHeight="0.0" minWidth="0.0">
                           <children>
                              <Label fx:id="GroupLabel" text="Group" />
                              <ChoiceBox fx:id="GroupChoiceBox" minHeight="0.0" minWidth="0.0" prefWidth="150.0" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
                  <VBox minHeight="0.0" minWidth="0.0">
                     <children>
                        <Label fx:id="LastNameLabel" text="Last name" />
                        <TextField fx:id="LastName" minHeight="0.0" minWidth="0.0" promptText="Enter your last name">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </TextField>
                        <Label fx:id="WeightLabel" layoutX="10.0" layoutY="10.0" text="Weight" />
                        <TextField fx:id="Weight" minHeight="0.0" minWidth="0.0" promptText="Enter your weight">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </TextField>
                        <VBox minHeight="0.0" minWidth="0.0">
                           <children>
                              <Label fx:id="SexLabel" text="Sex" />
                              <ChoiceBox fx:id="SexChoiceBox" minHeight="0.0" minWidth="0.0" prefWidth="150.0" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" minHeight="0.0" minWidth="0.0">
               <children>
                  <VBox minHeight="0.0" minWidth="0.0">
                     <children>
                        <Label fx:id="PhoneNumberLabel" text="Phone number" />
                        <TextField fx:id="PhoneNumber" minHeight="0.0" minWidth="0.0" promptText="Enter phone number">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </TextField>
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
            <Button fx:id="SaveButton" alignment="CENTER" minHeight="0.0" minWidth="0.0" mnemonicParsing="false" text="Save" />
         </children>
      </VBox>
   </center>
   <top>
      <HBox fx:id="headerHBox" alignment="TOP_RIGHT" minHeight="0.0" minWidth="0.0" spacing="5.0" style="-fx-background-color: rgb(119, 107, 93);" BorderPane.alignment="CENTER">
         <children>
            <VBox minHeight="0.0" minWidth="0.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="goToMainBtn" mnemonicParsing="false" style="-fx-background-color: rgb(235, 227, 213); -fx-background-radius: 20;" text="Go to menu" textFill="#776b5d" />
               </children>
            </VBox>
            <VBox fx:id="Language" alignment="CENTER" minHeight="0.0" minWidth="0.0">
               <children>
                  <Label fx:id="LanguageLabel" minHeight="0.0" minWidth="0.0" text="Language:" textFill="#f3eeea" />
               </children>
            </VBox>
            <ChoiceBox fx:id="languageChoiceBox" focusTraversable="false" minHeight="0.0" minWidth="0.0" style="-fx-background-color: rgb(235, 227, 213);" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
